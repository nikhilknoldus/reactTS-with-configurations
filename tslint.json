{
    "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
    "linterOptions": {
      "exclude": [
        "config/**/*.js",
        "node_modules/**/*.ts",
        "coverage/lcov-report/*.js"
      ]
    },
    "rulesDirectory": [
      "tslint-plugin-prettier"
    ],
    "rules": {
      "prettier": true,
      "prefer-const": true,
      "no-shadowed-variable": true,
      "curly": true,
      "no-duplicate-imports": true,
      "max-classes-per-file": {
        "options": [2]
      }
    }
  }
  